        <a class="nav-link" asp-area="" asp-controller="manager" asp-action="">
            <i class="fas fa-fw fa-tachometer-alt"></i>
            <span>Dashboard</span>
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-area="" asp-controller="manager" asp-action="ListJobAndDepartment">
