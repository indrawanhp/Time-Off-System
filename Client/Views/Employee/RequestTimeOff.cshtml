@inject IHttpContextAccessor HttpContextAccessor
@{
    Layout = "_UserLayout";
    ViewBag.Title = "Request Time Off";
    ViewBag.Id = HttpContextAccessor.HttpContext.Session.GetInt32("ID");
}

